[Unit]
Description=Start/stop nbox-rrd service
After=network.target syslog.target

[Service]
Type=oneshot
RemainAfterExit=yes

ExecStart=node /usr/share/nbox/script/nbox-rrd-store.js
ExecStop=kill $(ps aux | grep 'nbox-rrd-store.js' | head -n 1 | tr -s ' ' | cut -d ' ' -f 2)

[Install]
WantedBy=multi-user.target

